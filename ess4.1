import tkinter as tk
import math
def calculate_scientific(operation):
    try:
        value = float(entry.get())
        if operation == "sin":
            result = math.sin(math.radians(value))
        elif operation == "cos":
            result = math.cos(math.radians(value))
        elif operation == "tan":
            result = math.tan(math.radians(value))
        elif operation == "log":
            result = math.log10(value)
        elif operation == "sqrt":
            result = math.sqrt(value)
        entry.delete(0, tk.END)
        entry.insert(0, str(result))
    except ValueError:
        entry.insert(0, "Error")
# GUI setup
root = tk.Tk()
root.title("Scientific Calculator")
entry = tk.Entry(root, width=20, font=("Arial", 20))
entry.grid(row=0, column=0, columnspan=4)
# Scientific buttons
scientific_buttons = [
    ("sin", "sin"), ("cos", "cos"), ("tan", "tan"),
    ("log", "log"), ("âˆš", "sqrt")
]
for i, (text, operation) in enumerate(scientific_buttons):
    button = tk.Button(root, text=text, width=5, height=2,
                       command=lambda op=operation: calculate_scientific(op))
    button.grid(row=1, column=i)
root.mainloop()